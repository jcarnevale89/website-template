// Base Styles

body
  font-family "Helvetica", "Arial", sans-serif

  main
    position relative
    z-index 2
    background-color orange
    transition all 300ms cubic-bezier(0.65, 0.05, 0.36, 1)

    ^[0].is-active

      & main
        transform translate(280px)

        &:before
          content ''
          background black
          position fixed
          z-index 3
          width 100%
          height 100%

.row
  [class|="col"]
    background-color red
    border 1px solid black
